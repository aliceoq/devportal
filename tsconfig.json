{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "lib": ["ES2021.String"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/tests/cypress/support/commands.js"
  ],
  "exclude": ["node_modules"]
}
